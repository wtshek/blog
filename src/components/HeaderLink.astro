---
import { cn } from '@/lib/utils';

export interface Props {
  href: string;
}

const { href } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a
  href={href}
  class={cn(
    'text-nowrap relative inline-block py-5 px-10 text-black no-underline font-semibold uppercase tracking-wide text-sm transition-all duration-300 border-2 border-transparent bg-transparent hover:text-white hover:bg-red-600 hover:transform hover:-translate-x-0.5 hover:-translate-y-0.5 hover:border-black',
    isActive && 'text-white bg-red-600 border-black'
  )}
>
  <slot />
</a>
