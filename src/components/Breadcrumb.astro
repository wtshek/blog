---
interface BreadcrumbItem {
  name: string;
  href: string | null;
}

interface Props {
  items: BreadcrumbItem[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav aria-label="Breadcrumb" class={`w-full px-4 py-2 text-sm ${className}`}>
  <ol class="flex flex-wrap items-center space-x-2">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <span class="mx-2" aria-hidden="true">
            /
          </span>
        )}
        {item.href ? (
          <a 
            href={item.href} 
            class="transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-bauhaus-blue focus:ring-opacity-50 rounded"
          >
            {item.name}
          </a>
        ) : (
          <span class="text-black font-medium" aria-current="page">
            {item.name}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  /* Ensure proper spacing and prevent layout shift */
  nav {
    min-height: 2.5rem;
  }
  
  /* Truncate long breadcrumb names on small screens */
  @media (max-width: 640px) {
    li span,
    li a {
        
      max-width: 8rem;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
</style> 